<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bghistory"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/EventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pt_sans_caption_bold"
            android:gravity="center"
            android:text="Event Type"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/Status"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginStart="215dp"
        android:text="COMPLETED"
        android:fontFamily="@font/pt_sans_caption_bold"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginRight="15dp"
        android:background="@drawable/historystatusdesign"/>

        <TextView
            android:id="@+id/TimeandDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EventType"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/pt_sans_caption"
            android:text="Time and Date"
            android:textColor="#353535"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            />


    </RelativeLayout>

</RelativeLayout>